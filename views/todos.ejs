    <section class="vh-100">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                        <div class="position-relative top-50 start-50 translate-middle">
                            <img src="images/default.png"
                        class="img-fluid" alt="Lists Logo">
                    </div>
                    </div>
                    
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">
                        <h4>Welcome Back, <%= user.userName %></h4>
                        
                        <form action="/todos/createTodo" method='POST'>
                            <input type="text" placeholder="Enter List Item" name='todoItem'>
                            <input type="submit" class="btn btn-secondary">
                        </form>
                       
                        <ul class="list-group">
                        <% todos.forEach( el => { %>
                            <li class='todoItem list-group-item' data-id='<%=el._id%>'>
                                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                                <span class='del'> Delete </span>
                            </li>
                        <% }) %>    
                         </ul>
                         <h5><%= left %> items left</h5>
                    </div>
                </div>
                </div>
              </div>
            </div>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>


